<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
</head>
<body>
    <% layout("/layouts/boilerplate.ejs") %>
    <h1 class="col-8 offset-6">Sign Up</h1>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" id="username" required
                           title="Username should be 3-15 characters long, containing letters, numbers, or underscores.">
                    <div class="invalid-feedback">Enter a valid username (3-15 characters, no special symbols).</div>
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="email" required>
                    <div class="invalid-feedback">Enter a valid email address.</div>
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="password" 
                           required minlength="6" autocomplete="new-password">
                    <div class="invalid-feedback">Password must be at least 6 characters long.</div>
                </div>
                
                <button type="submit" class="btn btn-success">Sign Up</button>
            </form> 
        </div>
    </div>
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>