<% layout("layouts/boilerplate") %>
<style>
  .listings{
    display: grid;
    gap: 2rem;
    grid-template: auto / repeat(auto-fit, minmax(20rem, 1fr));
    justify-content: center;
    margin-top: 2rem;
  }

  .filters{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .filter{
    text-align: center;
    margin: 2rem auto;
    opacity: 0.7;
    padding: 1rem;
  }

  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }

  .filter-check{
    height: 3rem;
    align-content: center;
    border: 0.1rem solid black;
    padding: 0.1rem 1rem;
    border-radius: 0.5rem;
  }

  .tax {
    display: none;
  }
</style>
<body>
    <div class="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>castle</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>With pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-water"></i></div>
        <p>Near ghats</p>
      </div>
      <div class="filter-check">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault"> Display with taxes</label>
        </div>
      </div>
    </div>
    <div class="listings">
        <% for(let list of allListings){ %>
            <div class="card listing-card">
              <a href="/listing/<%= list._id %>" class="listing-link">
                <img src="<%= list.imageUrl.url %>" class="card-img-top" alt="Invalid Image URL" style="height: 20rem;" >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                <p class="card-text"><b><%= list.Title %></b><br>&#8377;  <%= list.Price ? list.Price.toLocaleString("en-IN") : "Price not available" %> / Night</div> </p>
                <p class="tax"><i> +18% GST</i></p>
              </a>
            </div>
        <% } %>
    </div>
    <script>
      let taxbtn = document.querySelector("#switchCheckDefault");
      taxbtn.addEventListener("click" , () => {
      let taxes = document.querySelectorAll(".tax");
      for(let tax of taxes){
         if(tax.style.display != "inline"){
          tax.style.display = "inline";
         }
         else{
          tax.style.display = "none"
         }
      }
      })
    </script>
</body>


