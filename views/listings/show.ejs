<% layout("layouts/boilerplate") %>
<body class="bg-light">
  <div class="container m-0 d-flex justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12 text-center">

        <!-- Listing Title -->
        <h1 class="mb-4 mt-3 fw-bold"><%= list.Title %></h1>

        <!-- Listing Card -->
        <div class="card mx-auto mb-4" style="max-width: 700px; background-color: transparent; border: none;">
          <% 
            const rawPath = list.imageUrl?.url || '';
            const correctedPath = rawPath.replace(/\\/g, '/');
            const finalPath = correctedPath.startsWith('/') ? correctedPath : `/${correctedPath}`;
          %>

          <img 
            src="<%= finalPath %>" 
            class="card-img-top img-fluid"
            alt="Listing Image"
            style="height: 25rem; object-fit: cover;"
            onerror="this.src='/images/default.jpg'"
          >

          <div class="card-body text-start">
            <p class="card-text">
              <strong>Owner:</strong> <%= list.owner.username %><br>  
              <%= list.Description %><br>
              &#8377; <%= list.Price ? list.Price.toLocaleString("en-IN") : "Price not available" %> / Night<br>
              <%= list.Location %>
            </p>
          </div>
        </div>

        <!-- Edit/Delete Buttons -->
        <% if(currUser && currUser._id.equals(list.owner._id)) { %>
          <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mb-5">
            <a href="/listing/<%= list._id %>/edit" class="btn btn-danger px-4">Edit</a>
            <form method="post" action="/listing/<%= list._id %>?_method=DELETE">
              <button class="btn btn-dark px-4">Delete</button>
            </form>
          </div>
        <% } %>

        <!-- Reviews Section -->
        <div class="mx-auto" style="max-width: 700px; text-align: left;">
          <hr class="my-4">

          <% if(currUser) { %>
            <h4 class="mb-3 text-center">Leave a Review</h4>
            <form action="/listing/<%= list._id %>/reviews" method="post" novalidate class="needs-validation mb-5">
              <div class="mb-3">
                <label for="rating" class="form-label">Rating</label><br>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating.">
                  <input type="radio" id="first-rate1" name="review[rating]" value="1"><label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2"><label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3"><label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4"><label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5"><label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a comment.</div>
              </div>

              <div class="text-center">
                <button class="btn btn-outline-dark px-5">Submit</button>
              </div>
            </form>
          <% } %>

          <div>
            <h5 class="fw-semibold mb-3">All Reviews</h5>
            <% if(list.review.length === 0) { %>
              <p class="text-muted">No reviews yet.</p>
            <% } %>

            <% for(let review of list.review) { %>
              <div class="card mb-3 shadow-sm">
                <div class="card-body">
                  <h6 class="card-title">@<%= review.author.username %></h6>
                  <p class="card-text mb-1"><%= review.comment %></p>
                  <p class="starability-result" data-rating="<%= review.rating %>"></p>
                </div>
                <% if(currUser && currUser._id.equals(list.owner._id)) { %>
                  <form method="POST" action="/listing/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" class="px-3 pb-3">
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>
              </div>
            <% } %>
          </div>
      </div>
    </div>
  </div>
</body>
